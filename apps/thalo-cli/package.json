{
  "name": "@rejot-dev/thalo-cli",
  "version": "0.1.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/rejot-dev/thalo.git",
    "directory": "apps/thalo-cli"
  },
  "license": "MIT",
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "thalo": "./bin/run.js"
  },
  "exports": {
    ".": {
      "development": "./src/mod.ts",
      "types": "./dist/mod.d.ts",
      "default": "./dist/mod.js"
    }
  },
  "main": "./dist/mod.js",
  "types": "./dist/mod.d.ts",
  "scripts": {
    "dev": "tsx src/mod.ts",
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "types:check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@rejot-dev/thalo": "workspace:*",
    "@rejot-dev/thalo-lsp": "workspace:*",
    "@rejot-dev/thalo-prettier": "workspace:*",
    "@rejot-dev/tree-sitter-thalo": "workspace:*",
    "ignore": "^7.0.5",
    "picocolors": "^1.1.1",
    "prettier": "^3.5.3",
    "vscode-languageserver": "^9.0.1",
    "web-tree-sitter": "catalog:"
  },
  "optionalDependencies": {
    "tree-sitter": "catalog:"
  },
  "devDependencies": {
    "@rejot-private/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "tsdown": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
