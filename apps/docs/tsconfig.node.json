{
  "include": ["vite.config.ts", "source.config.ts"],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "types": ["node"],
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "checkJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
