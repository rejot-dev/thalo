{
  "name": "thalo-vscode",
  "displayName": "Thalo Language",
  "description": "Syntax highlighting and formatting for Thalo language files",
  "version": "0.0.1",
  "private": true,
  "publisher": "wilco",
  "repository": {
    "type": "git",
    "url": "https://github.com/rejot-dev/thalo.git",
    "directory": "packages/thalo-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "main": "./dist/mod.js",
  "activationEvents": [
    "onLanguage:thalo"
  ],
  "contributes": {
    "languages": [
      {
        "id": "thalo",
        "aliases": [
          "Thalo",
          "thalo"
        ],
        "extensions": [
          ".thalo"
        ],
        "firstLine": "^[12]\\d{3}-[01]\\d-[0-3]\\dT[0-2]\\d:[0-5]\\d\\s+(create|update|define-entity|alter-entity)",
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "Thalo",
      "properties": {
        "thalo.cliPath": {
          "type": "string",
          "default": "",
          "description": "Path to the thalo CLI executable. Leave empty to use 'thalo' from PATH."
        }
      }
    },
    "commands": [
      {
        "command": "thalo.restartServer",
        "title": "Thalo: Restart Language Server"
      }
    ],
    "configurationDefaults": {
      "[thalo]": {
        "editor.semanticHighlighting.enabled": true
      }
    }
  },
  "scripts": {
    "build": "tsdown && vsce package --no-dependencies",
    "build:watch": "tsdown --watch",
    "types:check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.2.2",
    "@rejot-dev/typescript-config": "workspace:*",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
