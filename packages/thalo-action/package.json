{
  "name": "@rejot-dev/thalo-action",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "development": "./src/mod.ts",
      "types": "./dist/mod.d.ts",
      "default": "./dist/mod.js"
    }
  },
  "main": "./dist/mod.js",
