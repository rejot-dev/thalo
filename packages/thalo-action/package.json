  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@rejot-dev/thalo": "workspace:*",
    "@rejot-dev/tree-sitter-thalo": "workspace:*",
    "tree-sitter": "catalog:"
  },
  "devDependencies": {
    "@rejot-private/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
