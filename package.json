{
  "name": "@rejot-dev/",
  "private": true,
  "author": "Wilco Kruijer",
  "packageManager": "pnpm@10.18.2",
  "type": "module",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@rejot-dev/thalo-prettier": "workspace:*",
    "lefthook": "^1.13.6",
    "oxlint": "^1.41.0",
    "prettier": "3.6.2",
    "tsdown": "catalog:",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "scripts": {
    "dev": "turbo watch --ui tui dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:changed": "prettier -u --write $( (git ls-files --others --exclude-standard -z | xargs -0 -I{} sh -c '[ -L \"{}\" ] || printf \"%s\\0\" \"{}\"'; git diff --name-only --diff-filter=d -z HEAD) | xargs -0 | sort -u | xargs )",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "build": "turbo run build",
    "build:watch": "turbo watch build --filter='./packages/**'",
    "types:check": "turbo run types:check",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:wasm-fallback": "pnpm --filter @rejot-dev/scripts test:wasm-fallback",
    "test:prettier-wasm-fallback": "pnpm --filter @rejot-dev/scripts test:prettier-wasm-fallback",
    "pr-review": "pnpm --filter @rejot-dev/scripts pr-review",
    "pr-reply": "pnpm --filter @rejot-dev/scripts pr-reply",
    "ci:version": "changeset version && pnpm update && pnpm install && pnpm run format:changed",
    "ci:publish": "changeset publish && changeset tag"
  }
}
